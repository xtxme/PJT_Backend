{
  "extends": [
    "@tsconfig/node-lts/tsconfig.json"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@db/*": ["./db/*"]
    },
    "esModuleInterop": true,
    "strict": true
  },
  "include": [
    "./src/**/*",
    "./db/**/*"
  ]
}
